<section class="search_form">
<%= form_tag posts_path, :method => 'get' do %>
  <p>
    <%= text_area_tag :search, params[:search] %>
  </p>
  <p>
    <%= radio_button_tag :status, "published" %>
    <%= label_tag "status_published", "Published" %>
  </p>
  <p>
    <%= radio_button_tag :status, "unpublished" %>
    <%= label_tag "status_unpublished", "Unpublished" %>
  </p>
  <p>
    <%= submit_tag "Search titles", :name => nil %>
  </p>
<% end %>
  <% if params[:search].present? || (params[:status] == "published") %>
    <%= content_tag :div, "data-published" => true do %>
      Number of results: undefined for simplicity
    <% end %>
  <% end %>
  <% if params[:search].present? || (params[:status] == "unpublished") %>
    <%= content_tag :div, "data-unpublished" => true do %>
      Number of results: undefined for simplicity
    <% end %>
  <% end %>
</section>
